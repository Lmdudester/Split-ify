# Split-ify Environment Configuration
# Copy this file to .env and fill in your actual values

# Spotify API Configuration
# Get these from: https://developer.spotify.com/dashboard
VITE_SPOTIFY_CLIENT_ID=your_spotify_client_id_here
VITE_REDIRECT_URI=https://127.0.0.1:3443/callback

# Last.fm API Configuration
# Get this from: https://www.last.fm/api/account/create
VITE_LASTFM_API_KEY=your_lastfm_api_key_here

# Testing Mode
# Set to 'true' to enable mock APIs for development/testing
# When enabled, all Spotify and Last.fm API calls will be mocked
VITE_TESTING_MODE=false

# Git Repository Configuration
# Use HTTPS URL format for public repositories
GIT_REPO_URL=https://github.com/yourusername/Split-ify.git
GIT_BRANCH=main
